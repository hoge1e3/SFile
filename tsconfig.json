{
    "compilerOptions": {
      // ソースマップを有効化
      "sourceMap": true,
      "target": "esnext",
      "lib": ["esnext"],
      // TSのモジュールはES Modulesとして出力
      "module": "esnext",
      //"allowImportingTsExtensions": true,
      //"noEmit": true,
      "moduleResolution": "node",
      "declaration": true,
      // 厳密モードとして設定
      "strict": true,
      //"outDir":"./js"
      "tsBuildInfoFile": "./.tsbuildinfo",

    },
    "include": ["src","test"]
  }